@page
@model HelloWorldRazor.Pages.Customers.CreateModel

@{
    ViewData["Title"] = "Customer Creation Form";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.FirstName" class="control-label">First Name</label>
                <input asp-for="Customer.FirstName" class="form-control" maxlength="25" placeholder="John"
                    pattern="[A-Za-z]{1,25}" title="Please enter a valid first name." />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.MiddleName" class="control-label">Middle Name</label>
                <input asp-for="Customer.MiddleName" class="form-control" maxlength="25"
                    placeholder="Middle Name - Optional" pattern="[A-Za-z]{1,25}"
                    title="Please enter a valid middle name." />
                <span asp-validation-for="Customer.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.LastName" class="control-label">Last Name</label>
                <input asp-for="Customer.LastName" class="form-control" maxlength="25" placeholder="Smith"
                    pattern="[A-Za-z]{1,25}" title="Please enter a valid last name." />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.Email" class="control-label">Email Address</label>
                <input asp-for="Customer.Email" class="form-control" maxlength="255" placeholder="name@email.com.au"
                    title="Please enter a valid email address." />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.MobileNum" class="control-label">Mobile Number</label>
                <input asp-for="Customer.MobileNum" class="form-control" pattern="04[0-9]{8}"
                    title="Please enter a valid mobile number starting with 04 and followed by 8 digits." maxlength="10"
                    placeholder="0400 000 000" />
                <span asp-validation-for="Customer.MobileNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.Address" class="control-label"></label>
                <input asp-for="Customer.Address" class="form-control" />
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.Suburb" class="control-label"></label>
                <input asp-for="Customer.Suburb" class="form-control" />
                <span asp-validation-for="Customer.Suburb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.State" class="control-label"></label>
                <select asp-for="Customer.State" class="form-control">
                    <option value="">Select State</option>
                    <option value="NSW">New South Wales</option>
                    <option value="VIC">Victoria</option>
                    <option value="QLD">Queensland</option>
                    <option value="SA">South Australia</option>
                    <option value="NT">Northern Territory</option>
                    <option value="WA">Western Australia</option>
                    <option value="TAS">Tasmania</option>
                </select>
                <span asp-validation-for="Customer.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.Postcode" class="control-label"></label>
                <input asp-for="Customer.Postcode" class="form-control" />
                <span asp-validation-for="Customer.Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.Country" class="control-label"></label>
                <input asp-for="Customer.Country" class="form-control" />
                <span asp-validation-for="Customer.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.DOB" class="control-label">Date of Birth</label>
                <input asp-for="Customer.DOB" class="form-control" />
                <span asp-validation-for="Customer.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.License" class="control-label">Driver's License Number</label>
                <input asp-for="Customer.License" class="form-control" />
                <span asp-validation-for="Customer.License" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Customer.LicenseExp" class="control-label">License Expiry Date</label>
                <input asp-for="Customer.LicenseExp" class="form-control" />
                <span asp-validation-for="Customer.LicenseExp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
