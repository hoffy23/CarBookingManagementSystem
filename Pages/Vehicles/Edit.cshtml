@page
@model CarBookingManagementSystem.Pages.Vehicles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vehicle.Id" />
            <div class="form-group">

                <label asp-for="Vehicle.Make" class="control-label"></label>
                <input asp-for="Vehicle.Make" class="form-control" />
                <span asp-validation-for="Vehicle.Make" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Vehicle.Model" class="control-label"></label>
                <input asp-for="Vehicle.Model" class="form-control" />
                <span asp-validation-for="Vehicle.Model" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Vehicle.OdometerKm" class="control-label"></label>
                <input asp-for="Vehicle.OdometerKm" class="form-control" />
                <span asp-validation-for="Vehicle.OdometerKm" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Vehicle.Year" class="control-label"></label>
                <input asp-for="Vehicle.Year" class="form-control" />
                <span asp-validation-for="Vehicle.Year" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Vehicle.State" class="control-label"></label>
                <input asp-for="Vehicle.State" class="form-control" />
                <span asp-validation-for="Vehicle.State" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Vehicle.NumberPlate" class="control-label"></label>
                <input asp-for="Vehicle.NumberPlate" class="form-control" />
                <span asp-validation-for="Vehicle.NumberPlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
